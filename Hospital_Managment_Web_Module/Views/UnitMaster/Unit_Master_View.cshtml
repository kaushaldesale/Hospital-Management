@model Hospital_Managment_Model_Layer.Master_Model.Unit_Information_Model
<html lang="en">
<body class="bg-primary">
    @using (Html.BeginForm("SaveOrUpdate", "UnitMaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row ">
            <div class="col-md-3">
                <div class="form-group ">
                    <label class="small mb-1 ">Unit Name<small style="color:red">*</small></label>
                    @Html.HiddenFor(m => m.unit_id)
                    @Html.TextBoxFor(m => m.Unit_name, new { @class = "form-control form-control-sm sm-2 border border-dark disabled", autofocus = "autofocus", tabindex = "2" })
                    @Html.ValidationMessageFor(m => m.Unit_name, "", new { @class = "text-danger  " })
                </div>
            </div>


        </div>
        <div class="form-group mt-4 mb-0 form-actions">
            <button type="submit" class="btn btn-dark" id="btnsubmit"> Save Record </button>
        </div>
    }

</body>

</html>





