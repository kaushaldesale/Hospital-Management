@model Hospital_Managment_Model_Layer.Master_Model.Designation_information_Model
<html lang="en">
<body class="bg-primary">
//Added by Kd for Designation Master
    @using (Html.BeginForm("SaveOrUpdate", "Designation_Master", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row ">
            <div class="col-md-3">
                <div class="form-group ">
                    <label class="small mb-1 ">Designation<small style="color:red">*</small></label>
                    @Html.HiddenFor(m => m.designation_id)
                    @Html.TextBoxFor(m => m.designation_name, new { @class = "form-control form-control-sm sm-2 border border-dark disabled", autofocus = "autofocus", tabindex = "2" })
                    @Html.ValidationMessageFor(m => m.designation_name, "", new { @class = "text-danger  " })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group ">
                    <label class="small mb-1 ">Qualification <small style="color:red">*</small></label>
                    @Html.TextBoxFor(m => m.designation_qualification, new { @class = "form-control form-control-sm sm-2 border border-dark disabled", autofocus = "autofocus", tabindex = "2" })
                    @Html.ValidationMessageFor(m => m.designation_qualification, "", new { @class = "text-danger  " })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group ">
                    <label class="small mb-1 ">Description</label>
                    @Html.TextAreaFor(m => m.designation_description, new { @class = "form-control form-control-sm sm-2 border border-dark disabled", autofocus = "autofocus", tabindex = "2" })
                </div>
            </div>
        </div>
        <div class="form-group mt-4 mb-0 form-actions">
            <button type="submit" class="btn btn-dark" id="btnsubmit"> Save Record </button>
        </div>
    }

</body>

</html>




